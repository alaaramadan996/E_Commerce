<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFragment"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.user_cycle.LoginFragment"
        android:orientation="vertical"
        android:background="@color/colorFragment"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center"
            >
            <EditText
                android:background="@drawable/shape_edit_text"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                />
            <TextView
                android:gravity="center"
                android:text="رقم الحساب"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_text_view"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center"
            >
            <EditText
                android:background="@drawable/shape_edit_text"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                />
            <TextView
                android:gravity="center"
                android:text="كلمة المروور"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_text_view"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"/>
        </LinearLayout>
        <Button
            android:gravity="center"
            android:text="الدخول"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorFragment"
            android:background="@drawable/shape_btn_login"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            />
        <Button
            android:gravity="center"
            android:text="استعاده"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorFragment"
            android:background="@drawable/shape_btn_reb"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    </ScrollView>
</layout>